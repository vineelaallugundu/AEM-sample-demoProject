<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Carousal 50-50 Media"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <logoPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldDescription="Image for logo to be used on carousel."
                        fieldLabel="Logo Image"
                        fileNameParameter="./logoFileName"
                        fileReferenceParameter="./logoPathReference"
                        mimeTypes="[image]"
                        multiple="{Boolean}false"
                        name="./logoFile"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <logoAltText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="Logo alternative text for accessibility."
                        fieldLabel="Logo Alt Text"
                        name="./logoAltText"/>
                    <imagePath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldDescription="Image for cover to be used as background."
                        fieldLabel="Desktop Image"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        mimeTypes="[image]"
                        multiple="{Boolean}false"
                        name="./file"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <imgAltText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="Image alternative text for accessibility."
                        fieldLabel="Image Alt Text"
                        name="./imgAltText"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
