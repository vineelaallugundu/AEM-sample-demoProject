<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Video Carousel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.embed.v1.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceSuperType="dishcommons/components/button/cq:dialog/content">
        <items jcr:primaryType="nt:unstructured">
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Link">
                <items jcr:primaryType="nt:unstructured">
                    <columns jcr:primaryType="nt:unstructured">
                        <items
                            jcr:primaryType="nt:unstructured"
                            sling:hideChildren="[linkDetails]">
                            <share
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./allowShare"
                                text="Enable Share Icon in Video"
                                uncheckedValue="false"
                                value="true"/>
                            <carousel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Click here to add new carousel item">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./carouselData">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/include"
                                            path="core/wcm/components/title/v2/title/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/title"/>
                                        <text
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Text"
                                            name="./text"/>
                                        <url
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/include"
                                            path="wholesale/components/content/video/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/dam/items/columns/items/column/items/video"/>
                                        <file
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="wholesale/components/content/fileupload"
                                            class="{Boolean}false"
                                            disabled="{Boolean}false"
                                            fieldLabel="Image Placeholder"
                                            fileNameParameter="./fileName"
                                            fileReferenceParameter="./fileReference"
                                            mimeTypes="[image]"
                                            multiple="{Boolean}false"
                                            name="./file"
                                            title="Upload Image Asset"
                                            uploadUrl="${suffix.path}"
                                            useHTML5="{Boolean}true"/>
                                    </items>
                                </field>
                            </carousel>
                        </items>
                    </columns>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>
