<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Wholesale Image"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <alt
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Specify Alt Text"
                                                fieldLabel="Alt Text"
                                                name="./altText"
                                                required="{Boolean}true"/>
                                            <alignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Use this dropdown values to decide image alignment"
                                                fieldLabel="Choose image position"
                                                name="./alignment">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="left"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="right"/>
                                                    <center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center"
                                                        value="center"/>
                                                </items>
                                            </alignment>
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Provide Image Link"
                                                fieldLabel="Image Link"
                                                name="./imageLink"
                                                rootPath="/content/wholesale"/>
                                            <widthUnit
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Please choose unit of measurement"
                                                name="./widthUnit">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <percentage
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Percentage"
                                                        value="percentage"/>
                                                    <pixels
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Pixels"
                                                        value="pixels"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".width-showhide-target"/>
                                            </widthUnit>
                                            <pixels
                                                granite:class="width-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <widthInPixels
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify Width"
                                                        fieldLabel="Width (In Pixels)"
                                                        min="{Long}0"
                                                        name="./widthInPixels"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="pixels"/>
                                            </pixels>
                                            <percentage
                                                granite:class="width-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <widthInPercentage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                                        fieldDescription="Specify Width"
                                                        fieldLabel="Width (In %)"
                                                        max="{Long}100"
                                                        min="{Long}0"
                                                        name="./widthInPercentage"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="percentage"/>
                                            </percentage>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
